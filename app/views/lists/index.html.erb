<div class="banderol">
  <img src="https://www.carquefou.fr/medias/2017/12/Bandeau-Au-cinema.jpg" alt="" class="img-fluid">
  <div class="titre"><h3>My lists</h3></div>
</div>
<div class="container mt-4">
  <div class="pl-5 pr-5 text-end">
    <%= link_to "Add new list", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="d-flex flex-wrap justify-content-center">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class='card m-3 bg-secondary' style='width: 18rem;'>
          <div class='card-body text-center'>
            <h5 class='card-title text-decoration-none'><%= list.name %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
